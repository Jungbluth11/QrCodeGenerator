<Page
    x:Class="QrCodeGenerator.Views.WifiGeneratorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="clr-namespace:UnoGroupBox;assembly=UnoGroupBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:QrCodeGenerator.ViewModels"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:WifiGeneratorPageViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Text="SSID*" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding Ssid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Password"
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="5"
            IsEnabled="{Binding IsPasswordBoxEnabled}"
            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock
                x:Uid="NetworkType"
                Margin="0,0,5,0"
                VerticalAlignment="Center" />
            <ComboBox
                VerticalAlignment="Center"
                ItemsSource="{Binding AuthenticationModeStrings}"
                SelectedValue="{Binding CurrentAuthenticationMode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        </StackPanel>
        <gb:GroupBox
            x:Uid="PasswordType"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Background="{ThemeResource NavigationViewBackground}">
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="ASCII" IsChecked="{Binding IsAsciiSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <RadioButton Content="HEX" IsChecked="{Binding IsHexSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>
        </gb:GroupBox>
        <CheckBox
            x:Uid="HiddenNetwork"
            Grid.Row="2"
            Grid.Column="3"
            Margin="5"
            IsChecked="{Binding IsHiddenNetwork, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <CheckBox
            x:Uid="ShowCredentialsOnQrCode"
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            IsChecked="{Binding ShowTextOnImage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <CheckBox
            x:Uid="FormatPassword"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            IsChecked="{Binding UseGroups, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            Visibility="{Binding IsUseGroupsVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        <TextBlock
            x:Uid="InGroupsOf"
            Grid.Row="3"
            Grid.Column="2"
            Margin="5"
            Visibility="{Binding IsUseGroupsVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        <NumberBox
            Grid.Row="3"
            Grid.Column="3"
            Margin="5"
            KeyDown="UIElement_OnKeyDown"
            SpinButtonPlacementMode="Compact"
            Visibility="{Binding IsUseGroupsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
            Value="{Binding GroupLength, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
    </Grid>
</Page>
