<Page
    x:Class="QrCodeGenerator.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="clr-namespace:UnoGroupBox;assembly=UnoGroupBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:QrCodeGenerator.ViewModels"
    Width="1000"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:SettingsPageViewModel />
    </Page.DataContext>
    <StackPanel HorizontalAlignment="Center">
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Text="Theme" />
            <ComboBox
                Margin="5"
                SelectedIndex="{Binding CurrentTheme}"
                SelectionChanged="GroupBoxTheme_OnSelectionChanged">
                <ComboBoxItem x:Uid="ThemeSystem" Tag="System" />
                <ComboBoxItem x:Uid="ThemeLight" Tag="Light" />
                <ComboBoxItem x:Uid="ThemeDark" Tag="Dark" />
            </ComboBox>
        </StackPanel>
        <gb:GroupBox
            x:Uid="LoadedGenerators"
            Margin="10"
            Background="{ThemeResource NavigationViewBackground}">
            <StackPanel>
                <CheckBox
                    x:Uid="MenuText"
                    Margin="5"
                    IsChecked="{Binding IsTextGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuWiFi"
                    Margin="5"
                    IsChecked="{Binding IsWiFiGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuURL"
                    Margin="5"
                    IsChecked="{Binding IsUrlGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuBookmark"
                    Margin="5"
                    IsChecked="{Binding IsBookmarkGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuMail"
                    Margin="5"
                    IsChecked="{Binding IsMailGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuSMS"
                    Margin="5"
                    IsChecked="{Binding IsSmsGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuMMS"
                    Margin="5"
                    IsChecked="{Binding IsMmsGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuGeolocation"
                    Margin="5"
                    IsChecked="{Binding IsGeoGeneratorlocationEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuPhoneNumber"
                    Margin="5"
                    IsChecked="{Binding IsPhoneNumberGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuWhatsAppMessage"
                    Margin="5"
                    IsChecked="{Binding IsWhatsAppMessageGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuContactData"
                    Margin="5"
                    IsChecked="{Binding IsContactDataGeneratorEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <CheckBox
                    x:Uid="MenuCryptoCurrency"
                    Margin="5"
                    IsChecked="{Binding IsCryptoCurrencyEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>
        </gb:GroupBox>
    </StackPanel>
</Page>
