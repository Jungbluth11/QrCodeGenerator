<Page
    x:Class="QrCodeGenerator.Views.GeolocationGeneratorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:QrCodeGenerator.ViewModels"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:GeolocationGeneratorPageViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Uid="GeolocationEncoding"
            Grid.Row="0"
            Grid.Column="0"
            Margin="5" />
        <RadioButton
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Content="GEO"
            IsChecked="{Binding IsGeoSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <RadioButton
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            Content="Google Maps"
            IsChecked="{Binding IsGoogleMapsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Text="Latitude*" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5"
            Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Text="Longitude*" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5"
            Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
    </Grid>
</Page>
