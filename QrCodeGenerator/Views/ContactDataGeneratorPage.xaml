<Page
    x:Class="QrCodeGenerator.Views.ContactDataGeneratorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:QrCodeGenerator.ViewModels"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:ContactDataGeneratorPageViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Uid="Type"
            Grid.Row="0"
            Grid.Column="0"
            Margin="5" />
        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            ItemsSource="{Binding OutputTypes}"
            SelectedValue="{Binding SelectedOutputType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Firstname"
            Grid.Row="1"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Firstname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Lastname"
            Grid.Row="2"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Nickname"
            Grid.Row="3"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Phone"
            Grid.Row="4"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="MobilePhone"
            Grid.Row="5"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            Text="{Binding MobilePhone, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="WorkPhone"
            Grid.Row="6"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Margin="5"
            Text="{Binding WorkPhone, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="MailAddress"
            Grid.Row="7"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="7"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Birthday"
            Grid.Row="8"
            Grid.Column="0"
            Margin="5" />
        <DatePicker
            Grid.Row="8"
            Grid.Column="1"
            Margin="5"
            SelectedDate="{Binding Birthday, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Website"
            Grid.Row="9"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Website, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Street"
            Grid.Row="10"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="10"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Street, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="HouseNumber"
            Grid.Row="11"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="11"
            Grid.Column="1"
            Margin="5"
            Text="{Binding HouseNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="City"
            Grid.Row="12"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="12"
            Grid.Column="1"
            Margin="5"
            Text="{Binding City, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="ZipCode"
            Grid.Row="13"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="13"
            Grid.Column="1"
            Margin="5"
            Text="{Binding ZipCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Country"
            Grid.Row="14"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="14"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Country, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="Note"
            Grid.Row="15"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="15"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Note, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="StateRegion"
            Grid.Row="16"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="16"
            Grid.Column="1"
            Margin="5"
            Text="{Binding StateRegion, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="AddressOrder"
            Grid.Row="17"
            Grid.Column="0"
            Margin="5" />
        <StackPanel
            Grid.Row="17"
            Grid.Column="1"
            Margin="5"
            Orientation="Horizontal">
            <RadioButton x:Uid="AdressFormatEurope" IsChecked="{Binding IsAdressFormatEuropeSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <RadioButton x:Uid="AdressFormatNorthAmericaAndOther" IsChecked="{Binding IsAdressFormatNorthAmericaAndOtherSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        </StackPanel>
        <TextBlock
            x:Uid="Organization"
            Grid.Row="18"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="18"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Org, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            x:Uid="OrganizationTitle"
            Grid.Row="19"
            Grid.Column="0"
            Margin="5" />
        <TextBox
            Grid.Row="19"
            Grid.Column="1"
            Margin="5"
            Text="{Binding OrgTitle, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
    </Grid>
</Page>
